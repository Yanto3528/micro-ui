{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "__OS__": true,
    "__ENV__": true,
    "__ADOBE_ANALYTIC_SCRIPT__": true,
    "__ADOBE_ANALYTIC_ENV__": true,
    "__PRODUCT_SERVICE_HOST__": true,
    "__REFERENCE_SERVICE_HOST__": true,
    "__CUSTOMER_SERVICE_HOST__": true,
    "__CONFIG_SERVICE_HOST__": true,
    "__CAMPAIGN_SERVICE_HOST__": true,
    "__QUOTATION_SERVICE_HOST__": true,
    "__PAYMENT_SERVICE_HOST__": true,
    "__DOCUMENT_SERVICE_HOST__": true,
    "__ORDER_SERVICE_HOST__": true,
    "__MYINFO_SERVICE_HOST__": true
  },
  "extends": ["prettier"],
  "plugins": ["react", "react-hooks", "import", "prettier"],
  "settings": {
    "react": {
      "version": "999.999.999"
    },
    "import/resolver": {
      "babel-module": {},
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "template-curly-spacing": "off",
    "no-console": "warn",
    "no-eval": "off",
    "eqeqeq": "off",
    "no-var": "error",
    "no-alert": "error",
    "no-debugger": "error",
    "no-useless-escape": "error",
    "no-unused-vars": ["error", { "args": "after-used" }],
    "no-undef": "error",
    "array-bracket-spacing": ["error", "never"],
    "no-param-reassign": "off",
    "arrow-body-style": "off",

    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": ["error", { "commonjs": true, "amd": true }],
    "import/named": "off",
    "import/namespace": "off",
    "import/default": "off",
    "import/export": "error",
    "import/no-named-as-default": "off",
    "import/no-commonjs": "off",
    "import/no-amd": "error",
    "import/imports-first": "error",
    "import/no-duplicates": "error",
    "import/no-unassigned-import": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    "react/jsx-indent-props": [2, 2],
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-boolean-value": "error",
    "react/jsx-no-undef": 2,
    "react/jsx-closing-bracket-location": [1, "tag-aligned"],
    "react/jsx-no-bind": [2, { "allowArrowFunctions": true }],
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,

    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-unknown-property": 2,
    "react/no-set-state": 0,
    "react/prop-types": [2, { "ignore": ["children"] }],
    "react/self-closing-comp": 2,
    "react/sort-comp": 2,
    "react/no-unused-prop-types": 2,
    "react/no-unused-state": 2
  }
}
